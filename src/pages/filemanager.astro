---
import Layout from "../layouts/Layout.astro";

const MAX_FILE_SIZE_MB = 50;
const UPLOAD_ENDPOINT = "https://00224466.xyz/models/upload.php";
const MODELS_BASE_URL = "https://00224466.xyz/models/";
---

<Layout>
    <div class="main-content wide-content">
        <h1>HoloSpace-XR File Manager</h1>
        <div class="dual-container">
            <div class="panel upload-panel">
                <h2>Upload Model</h2>
                <div class="upload-container">
                    <div id="dropzone" class="dropzone">
                        <div class="dropzone-content">
                            <svg class="upload-icon" xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                                <polyline points="17 8 12 3 7 8"/>
                                <line x1="12" y1="3" x2="12" y2="15"/>
                            </svg>
                            <p>Drag a <strong>.glb</strong> file here</p>
                            <p class="or-text">or</p>
                            <label for="fileInput" class="file-select-btn">Select file</label>
                            <input type="file" id="fileInput" accept=".glb" hidden />
                            <p class="file-limit">Max. {MAX_FILE_SIZE_MB} MB</p>
                        </div>
                    </div>
                    <div id="fileInfo" class="file-info hidden">
                        <div class="file-details">
                            <span id="fileName" class="file-name"></span>
                            <span id="fileSize" class="file-size"></span>
                            <button id="removeFile" class="remove-btn" title="Remove file">âœ•</button>
                        </div>
                    </div>
                    <div class="code-section">
                        <label for="uploadCode">Enter upload key:</label>
                        <input type="password" id="uploadCode" placeholder="..." autocomplete="off" />
                    </div>
                    <button id="uploadBtn" class="upload-btn" disabled>
                        <span id="uploadBtnText">Upload</span>
                        <div id="uploadSpinner" class="spinner hidden"></div>
                    </button>
                    <div id="uploadStatus" class="status-message hidden"></div>
                    <div id="progressContainer" class="progress-container hidden">
                        <div id="progressBar" class="progress-bar"></div>
                        <span id="progressText" class="progress-text">0%</span>
                    </div>
                </div>
            </div>
            <div class="panel download-panel">
                <h2>Download Model</h2>
                <div class="download-container">
                    <div class="download-icon-wrapper">
                        <svg class="download-icon" xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                            <polyline points="7 10 12 15 17 10"/>
                            <line x1="12" y1="15" x2="12" y2="3"/>
                        </svg>
                    </div>
                    <div class="input-section">
                        <label for="modelName">Model name (with .glb):</label>
                        <input type="text" id="modelName" placeholder="..." autocomplete="off" />
                    </div>
                    <div class="input-section">
                        <label for="apiKey">Enter download key:</label>
                        <input type="password" id="apiKey" placeholder="..." autocomplete="off" />
                    </div>
                    <button id="downloadBtn" class="download-btn" disabled>
                        <span id="downloadBtnText">Download</span>
                        <div id="downloadSpinner" class="spinner hidden"></div>
                    </button>
                    <div id="downloadStatus" class="status-message hidden"></div>
                </div>
            </div>
        </div>
        <div id="uploadConfig" data-max-size={MAX_FILE_SIZE_MB} data-endpoint={UPLOAD_ENDPOINT} data-models-url={MODELS_BASE_URL} hidden></div>
        <script src="../scripts/uploadFile.ts"></script>
        <script src="../scripts/downloadFile.ts"></script>
    </div>
</Layout>